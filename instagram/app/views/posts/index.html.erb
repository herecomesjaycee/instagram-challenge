<h2>Instagram</h2>

<% if @posts.any? %>
  <% @posts.each do |post| %>
  <div class=post>
    <%= image_tag 'https:' + post.image.url[0..4] + 'eu-west-2.' + post.image.url(:medium)[5..post.image.url.length-1] %>
    <h4> <%= post.caption %> </h4>
    <%= link_to "Edit", edit_post_path(post) %>
    <%= link_to "Comment", new_post_comment_path(post) %>
    <%= link_to "Delete", post_path(post), method: :delete %>
  </div>
  <% end %>

<% else %>
  No posts yet
<% end %>
<a href='posts/new'>Add a post</a>